extends ../layout
include ../mixin/title.pug
include ../mixin/modal.pug

block head
    link(rel="stylesheet" href="/stylesheets/paciente/forms-paciente.css")

block content
    +SectionTitle('REGISTRAR PACIENTE')

    form(id="formPaciente" action="/pacientes/new" method="POST")
        label(for="nombre") Nombre
        input(
            type="text" 
            name="nombre" 
            id="nombre" 
            placeholder="Ingrese el nombre" 
            value=(formData && formData.nombre || '')
        )

        label(for="apellido") Apellido
        input(
            type="text" 
            name="apellido" 
            id="apellido" 
            placeholder="Ingrese el apellido" 
            value=(formData && formData.apellido || '')
        )

        label(for="dni") DNI
        input(
            type="text" 
            name="dni" 
            id="dni" 
            placeholder="Ingrese el DNI" 
            value=(formData && formData.dni || '')
        )

        label(for="cobertura") Cobertura
        input(
            type="text" 
            name="cobertura" 
            id="cobertura" 
            placeholder="Ingrese la cobertura" 
            value=(formData && formData.cobertura || '')
        )

        label(for="email") Email
        input(
            type="email" 
            name="email" 
            id="email" 
            placeholder="Ingrese el email" 
            value=(formData && formData.email || '')
        )

        label(for="telefono") Teléfono
        input(
            type="text" 
            name="telefono" 
            id="telefono" 
            placeholder="Ingrese el teléfono" 
            value=(formData && formData.telefono || '')
        )

        label(for="domicilio") Domicilio
        input(
            type="text" 
            name="domicilio" 
            id="domicilio" 
            placeholder="Ingrese el domicilio" 
            value=(formData && formData.domicilio || '')
        )

        button(type="submit") Registrar paciente

    if modalMessage
        +Modal('modalGeneric', modalTitle, modalMessage, modalType)
