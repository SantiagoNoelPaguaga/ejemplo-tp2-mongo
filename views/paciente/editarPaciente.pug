extends ../layout
include ../mixin/title.pug
include ../mixin/modal.pug

block head
    link(rel="stylesheet" href="/stylesheets/paciente/forms-paciente.css")

block content
    +SectionTitle('ACTUALIZAR PACIENTE')

    form(id="formPaciente" action=`/pacientes/edit/${paciente._id}` method="POST")
        input(type="hidden" name="_method" value="PUT")

        label(for="nombre") Nombre
        input(type="text" name="nombre" id="nombre" value=paciente.nombre)

        label(for="apellido") Apellido
        input(type="text" name="apellido" id="apellido" value=paciente.apellido)

        label(for="dni") DNI
        input(type="text" name="dni" id="dni" value=paciente.dni)

        label(for="cobertura") Cobertura
        input(type="text" name="cobertura" id="cobertura" value=paciente.cobertura)

        label(for="email") Email
        input(type="email" name="email" id="email" value=paciente.email)

        label(for="telefono") Tel√©fono
        input(type="text" name="telefono" id="telefono" value=paciente.telefono)

        label(for="domicilio") Domicilio
        input(type="text" name="domicilio" id="domicilio" value=paciente.domicilio)

        button(type="submit") Guardar cambios

    if modalMessage
        +Modal('modalGeneric', modalTitle, modalMessage, modalType)
