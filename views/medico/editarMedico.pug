extends ../layout
include ../mixin/title.pug
include ../mixin/modal.pug

block head
    link(rel="stylesheet" href="/stylesheets/medico/forms-medico.css")

block content
    +SectionTitle('ACTUALIZAR MÉDICO')

    form(id="formMedico" action=`/medicos/edit/${medico._id}` method="POST")
        input(type="hidden" name="_method" value="PUT")

        label(for="nombre") Nombre
        input(
            type="text"
            name="nombre"
            id="nombre"
            value=medico.nombre
        )

        label(for="apellido") Apellido
        input(
            type="text"
            name="apellido"
            id="apellido"
            value=medico.apellido
        )

        label(for="matricula") Matrícula
        input(
            type="text"
            name="matricula"
            id="matricula"
            value=medico.matricula
        )

        label(for="dni") DNI
        input(
            type="text"
            name="dni"
            id="dni"
            value=medico.dni
        )

        label(for="telefono") Teléfono
        input(
            type="text"
            name="telefono"
            id="telefono"
            value=medico.telefono
        )

        label(for="email") Email
        input(
            type="email"
            name="email"
            id="email"
            value=medico.email
        )

        label(for="domicilio") Domicilio
        input(
            type="text"
            name="domicilio"
            id="domicilio"
            value=medico.domicilio
        )

        label(for="especialidades") Especialidades
        select(name="especialidades" id="especialidades" multiple)
            each esp in especialidades
                option(
                    value=esp.nombre
                    selected=(medico && medico.especialidades && medico.especialidades.includes(esp.nombre))
                )= esp.nombre

        button(type="submit") Guardar cambios

    if modalMessage
        +Modal('modalGeneric', modalTitle, modalMessage, modalType)
